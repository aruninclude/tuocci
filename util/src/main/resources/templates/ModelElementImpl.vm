package ${packageName};

import de.irf.it.tuocci.model.representation.Attribute;
import de.irf.it.tuocci.model.representation.Category;
import de.irf.it.tuocci.model.representation.Model;

import java.net.URI;

public class ${elementName}ModelImpl implements Model {

    private static Model instance;

    public static Model getInstance() {
        if(instance == null) {
            instance = new ${elementName}ModelImpl();
        } // if
        return instance;
    }

    private Type modelType =
        #if(${occiClass} == "de.irf.it.tuocci.annotations.Kind")
            Type.KIND;
        #elseif(${occiClass} == "de.irf.it.tuocci.annotations.Mixin")
            Type.MIXIN;
        #elseif(${occiClass} == "de.irf.it.tuocci.annotations.Action")
            Type.ACTION;
        #end

    private final Category category = new Category(
            URI.create("${occiCategory.scheme()}"),
            "${occiCategory.term()}",
            "${occiCategory.title()}"
    );

    private final Model[] related = new Model[]{
    #foreach(${r} in ${occiRelated})
        ${r}ModelImpl.getInstance()#if(${velocityHasNext}),#end
    #end
    };

    private final Attribute[] attributes = {
    #foreach(${a} in ${occiAttributes})
        new Attribute("${a.name()}", ${a.required()}, ${a.mutable()})#if(${velocityHasNext}),#end
    #end
    };

    private final Model[] actions = {
    #foreach(${a} in ${occiActions})
        ${a}ModelImpl.getInstance()#if(${velocityHasNext}),#end
    #end
    };

    @Override
    public Type getModelType() {
        return this.modelType;
    }

    @Override
    public Category getCategory() {
        return this.category;
    }

    @Override
    public Model[] getRelated() {
        return this.related;
    }

    @Override
    public Attribute[] getAttributes() {
        return this.attributes;
    }

    @Override
    public Model[] getActions() {
        return this.actions;
    }
}